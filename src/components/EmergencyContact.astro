---
import moment from 'moment';

const startDate = moment('2024-10-25');
const endDate = moment('2024-10-26');
const now = moment();
const show = now > startDate && now < endDate;
console.log(show);
---

<section class="container mx-auto px py-10 mt-10">
    <div class="grid place-content-center">
        {
            show ? (
                <a
                    href="tel:7196604878"
                    class="inline-block py-3 px-12 text-center text-white bg-red-600 rounded-lg shadow"
                >
                    <h3 class="text-xl mb-2">Emergency Contact</h3>
                    <p class="text-4xl">(719) 660-4878</p>
                </a>
            ) : (
                <p class="text-2xl py-6 px-12 rounded-xl border-white border-2 border-dashed">
                    Emergency contact info will be displayed here on
                    the day of the event.
                </p>
            )
        }
    </div>
</section>
