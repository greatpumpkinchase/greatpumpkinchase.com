---
import { Image } from 'astro:assets';
import NavigationLink from './NavigationLink.astro';
import logo from '../assets/gpc-logo.svg';
import isRegistrationOpen from '../js/isRegistrationOpen';
---

<nav
    class="container mx-auto px-lg flex flex-col md:flex-row md:gap-10 sm:justify-between items-center py-2"
>
    <div>
        <a class="inline-block py-3 text-xl font-bold" href="/">
            <Image
                class="h-16 w-auto block"
                src={logo}
                alt="Great Pumpkin Chase logo with text only"
            />
        </a>
    </div>
    <div>
        <ul
            class="mr-3 h-full flex flex-wrap justify-center items-center gap-5 lg:gap-8"
        >
            <NavigationLink href="/parents"
                >Parent Info</NavigationLink
            >
            <NavigationLink href="/volunteer"
                >Volunteer</NavigationLink
            >
            <NavigationLink href="/contact">Contact</NavigationLink>
            {
                isRegistrationOpen() && (
                    <NavigationLink href="/registration" bold>
                        Register
                    </NavigationLink>
                )
            }
        </ul>
    </div>
</nav>
